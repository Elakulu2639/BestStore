@{
    ViewBag.Title = "Forgot Password";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="mx-auto rounded border p-4 shadow" style="width: 400px;">
    <h2 class="text-center mb-3">Forgot Password</h2>
    <hr />

    @if (ViewBag.SuccessMessage != null)
    {
        <div class='alert alert-success alert-dismissible fade show' role='alert'>
            <strong>@ViewBag.SuccessMessage</strong>
            <button type='button' class='btn-close' data-bs-dismiss='alert' aria-label='Close'></button>
        </div>
    }

    <form method="post">
        <div class="mb-3">
            <label class="form-label">Email</label>
            <input class="form-control" name="email" value="@ViewBag.Email" placeholder="Enter your email" />
            <span class="text-danger">@ViewBag.EmailError</span>
        </div>

        <div class="row mb-3">
            <div class="col d-grid">
                <button type="submit" class="btn btn-primary">Submit</button>
            </div>
            <div class="col d-grid">
                <a class="btn btn-outline-primary" asp-controller="Account" asp-action="Login" role="button">
                    Login
                </a>
            </div>
        </div>
    </form>
</div>

<style>
    .rounded {
        border-radius: 15px;
    }

    .border {
        border: 1px solid #ced4da;
    }

    .shadow {
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .form-label {
        font-weight: bold;
    }

    .text-danger {
        font-size: 0.9em;
    }
</style>
