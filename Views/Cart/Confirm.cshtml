<div class="container-lg my-5">
    <div class="card shadow-sm border-0 mx-auto" style="max-width: 450px;">
        <div class="card-body p-4">
            <h2 class="fw-bold text-primary text-center mb-4">
                <i class="fas fa-file-invoice me-2"></i>Order Details
            </h2>
            <hr />

            @if (ViewBag.SuccessMessage != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="fas fa-check-circle me-2"></i>@ViewBag.SuccessMessage
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
                <div class="d-grid">
                    <a class="btn btn-outline-primary" asp-controller="ClientOrders" asp-action="Index">
                        <i class="fas fa-arrow-left me-2"></i>Back to Orders
                    </a>
                </div>
            }
            else
            {
                <dl class="row mb-4 g-2">
                    <dt class="col-5 fw-semibold text-muted">Delivery Address</dt>
                    <dd class="col-7">@ViewBag.DeliveryAddress</dd>
                    <dt class="col-5 fw-semibold text-muted">Payment Method</dt>
                    <dd class="col-7">@ViewBag.PaymentMethod</dd>
                    <dt class="col-5 fw-semibold text-muted">Total Amount</dt>
                    <dd class="col-7">@ViewBag.Total.ToString("C")</dd>
                    <dt class="col-5 fw-semibold text-muted">Quantity</dt>
                    <dd class="col-7">@ViewBag.CartSize</dd>
                </dl>

                <form method="post">
                    <div class="row g-3">
                        <div class="col-sm-6 d-grid">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-check me-2"></i>Confirm Order
                            </button>
                        </div>
                        <div class="col-sm-6 d-grid">
                            <a class="btn btn-outline-primary" asp-controller="Cart" asp-action="Index">
                                <i class="fas fa-arrow-left me-2"></i>Back to Cart
                            </a>
                        </div>
                    </div>
                </form>
            }
        </div>
    </div>
</div>

@section Styles {
    <style>
        .card {
            border-radius: 0.75rem;
        }

        .alert-dismissible {
            border-radius: 0.5rem;
        }
    </style>
}

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/js/all.min.js"></script>
}









