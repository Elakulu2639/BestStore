@model List<Product>
@{
     ViewData["Title"] = "Home Page"; 
     ViewData["HomePage"] = true; 
 } 

<!-- Hero Section -->
<section class="hero-section" style="background: linear-gradient(135deg, #08618d 0%, #1a3c6d 100%);">
    <div class="container text-white py-5">
        <div class="row align-items-center g-5">
            <div class="col-md-6">
                <h1 class="display-3 fw-bold mb-4">Best Store for Electronics</h1>
                <p class="lead mb-4">
                    Discover the latest electronic devices from top brands at unbeatable prices.
                </p>
                <a asp-controller="Store" asp-action="Index" class="btn btn-primary btn-lg">
                    <i class="fas fa-shopping-bag me-2"></i>Shop Now
                </a>
            </div>
            <div class="col-md-6 text-center">
                <img src="/images/hero.png" class="img-fluid rounded shadow-sm" alt="Electronics Hero" style="max-height: 400px; object-fit: contain;" />
            </div>
        </div>
    </div>
</section>

<!-- Newest Products Section -->
<section class="bg-light py-5">
    <div class="container">
        <h2 class="fw-bold text-primary text-center mb-5">Newest Products</h2>
        <div class="row g-4 mb-5">
            @if (Model.Any())
            {
                @foreach (var product in Model)
                {
                    <div class="col-lg-3 col-md-6">
                        <div class="card h-100 shadow-sm border-0 transition-all hover-scale">
                            <img src="/products/@product.ImageFileName" class="card-img-top rounded-top" alt="@product.Name" style="height: 200px; object-fit: contain; padding: 1rem; background-color: #f8f9fa;" />
                            <div class="card-body text-center">
                                <h5 class="card-title fw-semibold mb-2">@product.Name</h5>
                                <p class="text-muted small mb-2">
                                    @product.Brand | @product.Category
                                </p>
                                <h4 class="text-success mb-3">@product.Price.ToString("C")</h4>
                                <div class="d-flex gap-2">
                                    <a class="btn btn-primary btn-sm" asp-controller="Store" asp-action="Details" asp-route-id="@product.Id">
                                        Details
                                    </a>
                                    <button type="button" class="btn btn-warning btn-sm" onclick="addToCart(this, @product.Id)">
                                        <i class="fas fa-cart-plus me-1"></i>Add to Cart
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                <div class="col-12 text-center text-muted">
                    <p>No new products available at the moment. Check back soon!</p>
                    <a asp-controller="Store" asp-action="Index" class="btn btn-outline-primary">Explore All Products</a>
                </div>
            }
        </div>
    </div>
</section>

@section Styles {
    <style>
         .hero-section { 
             min-height: 500px; 
             background-size: cover; 
             background-position: center; 
         } 

         .transition-all { 
            transition: all 0.2s ease-in-out; 
         } 

         .hover-scale:hover { 
             transform: scale(1.05); 
        } 

         .card-img-top { 
             padding: 1rem; 
             background-color: #f8f9fa; 
         } 

        .btn-lg { 
             padding: 0.75rem 1.5rem; 
         } 
    </style> 
 } 

 @section Scripts { 
     <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script> 
     <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/js/all.min.js"></script> 
 } 













