@model ProductDto

<div class="container-lg">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-light py-3">
                    <h2 class="card-title text-center mb-0">
                        <i class="fas fa-edit me-2 text-primary"></i>Edit Product
                    </h2>
                </div>
                <div class="card-body">
                    <form method="post" enctype="multipart/form-data" class="needs-validation" novalidate>
                        <!-- Product ID -->
                        <div class="mb-4">
                            <label class="form-label fw-semibold">Product ID</label>
                            <input class="form-control-plaintext"
                                   readonly
                                   value="@ViewData["ProductId"]" />
                        </div>

                        <!-- Name Input -->
                        <div class="mb-4">
                            <label class="form-label fw-semibold">Product Name</label>
                            <input class="form-control"
                                   asp-for="Name"
                                   placeholder="Enter product name">
                            <span asp-validation-for="Name" class="text-danger small"></span>
                        </div>

                        <!-- Brand Input -->
                        <div class="mb-4">
                            <label class="form-label fw-semibold">Brand</label>
                            <input class="form-control"
                                   asp-for="Brand"
                                   placeholder="Enter brand name">
                            <span asp-validation-for="Brand" class="text-danger small"></span>
                        </div>

                        <!-- Category Select -->
                        <div class="mb-4">
                            <label class="form-label fw-semibold">Category</label>
                            <select class="form-select" asp-for="Category">
                                <option value="Phones">📱 Phones</option>
                                <option value="Computers">💻 Computers</option>
                                <option value="Accessories">🎧 Accessories</option>
                                <option value="Printers">🖨️ Printers</option>
                                <option value="Cameras">📷 Cameras</option>
                                <option value="Other">✨ Other</option>
                            </select>
                        </div>

                        <!-- Price Input -->
                        <div class="mb-4">
                            <label class="form-label fw-semibold">Price</label>
                            <div class="input-group">
                                <span class="input-group-text">$</span>
                                <input class="form-control"
                                       asp-for="Price"
                                       placeholder="0.00">
                            </div>
                            <span asp-validation-for="Price" class="text-danger small"></span>
                        </div>

                        <!-- Description Textarea -->
                        <div class="mb-4">
                            <label class="form-label fw-semibold">Description</label>
                            <textarea class="form-control"
                                      asp-for="Description"
                                      rows="3"
                                      placeholder="Enter product description"></textarea>
                            <span asp-validation-for="Description" class="text-danger small"></span>
                        </div>

                        <!-- Image Preview -->
                        <div class="mb-4 text-center">
                            <div class="image-preview border rounded p-2">
                                <img src="/products/@ViewData["ImageFileName"]"
                                     class="img-fluid rounded"
                                     style="max-height: 200px"
                                     alt="Current product image">
                                <div class="mt-2 text-muted small">Current Image</div>
                            </div>
                        </div>

                        <!-- Image Upload -->
                        <div class="mb-4">
                            <label class="form-label fw-semibold">Update Image</label>
                            <input class="form-control"
                                   type="file"
                                   asp-for="ImageFile"
                                   accept="image/*">
                            <span asp-validation-for="ImageFile" class="text-danger small"></span>
                        </div>

                        <!-- Created At -->
                        <div class="mb-4">
                            <label class="form-label fw-semibold">Created At</label>
                            <input class="form-control-plaintext"
                                   readonly
                                   value="@ViewData["CreatedAt"]" />
                        </div>

                        <!-- Form Actions -->
                        <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
                            <a class="btn btn-outline-secondary"
                               asp-controller="Products"
                               asp-action="Index">
                                Cancel
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save me-2"></i>Save Changes
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .card {
            border-radius: 1rem;
        }

        .image-preview {
            background: #f8f9fa;
            transition: transform 0.2s;
        }

            .image-preview:hover {
                transform: translateY(-2px);
            }

        .form-label {
            margin-bottom: 0.5rem;
        }
    </style>
}

@section Scripts {
    <!-- Bootstrap Validation -->
    <script>
        (() => {
            'use strict'
            const forms = document.querySelectorAll('.needs-validation')
            Array.from(forms).forEach(form => {
                form.addEventListener('submit', event => {
                    if (!form.checkValidity()) {
                        event.preventDefault()
                        event.stopPropagation()
                    }
                    form.classList.add('was-validated')
                }, false)
            })
        })()
    </script>
    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/js/all.min.js"></script>
 
}



